generator client {
  provider = "prisma-client-js"
  // outputDirectory = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // เรียกใช้ค่าจาก environment variable
}

// กำหนดโมเดลของคุณ
model User {
  user_id    Int      @id @default(autoincrement())
  username   String
  email      String   @unique
}