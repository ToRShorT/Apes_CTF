generator client {
  provider = "prisma-client-js"
  // outputDirectory = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // เรียกใช้ค่าจาก environment variable
}

// กำหนดโมเดลของคุณ
model User {
  user_id       Int      @id @default(autoincrement())
  username      String?
  password      String?
  email         String   @unique
  user_role_id  Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime?
  deletedAt     DateTime?

}

model User_role {
  user_role_id Int      @id @default(autoincrement())
  role_title   String?
}

model Reports {
  report_id    Int      @id @default(autoincrement())
  report_title String?
  report_desc  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime?
  deletedAt    DateTime?
}